                    <br>
                    <h3 class="text-center">Write a message for users...</h3>
                    <br>
                    <hr>
                    <form name="grades" action="" method="post" >
                    <table  border="1px solid black" height="320px" width="100%">
                        <tr class="table-header">
                            <th width="80%" class="text-center">Write your message here ..</th>
                            <th width="20%">Date</th>
                        </tr>                         
                        <tr class="table-body">
                            <td class="message">
                               <textarea name="message"  cols="90" rows="10" required>Hello students !! This is admin.. </textarea>
                            </td>
                            <td>
                                <input type="date" name="date" required>
                            </td>
                        </tr>
                           
                    </table>
                    <br>
                    <input type="submit" class="btn btn-success" value="Send Message">
                    </form>
                </div>
            </div>
        </div>
